def check_total_mem(pids):
    i = 0
    mem_total = 0
    mem_dict = {}

    while i < len(pids):
        uss = get_USS(pids[i])
        mem_total = mem_total + int(uss)
        mem_dict.update({pids[i]: int(uss)})
        i = i + 1

    return mem_total, mem_dict


def random_kill(pids, mem):

    i =0
    #mem = 0
    #total_mem = 0
    freed_mem = 0
    total_proc = 0
    #check if total mem in pids is >= mem
    while len(pids) > 0 and int(mem) > 0:
        index = random.randint(0, len(pids) - 1)
        uss = get_USS(pids[index])
        #total_mem = total_mem + uss
        print("index", index)
        print("uss is", uss)
        mem = mem - uss
        print("current mem",mem)
        print("kill process", pids[index])
        freed_mem +=uss
        total_proc +=1
        #os.kill(int(pids[index]), signal.SIGKILL)

        pids.pop(index)
        #mem = mem -1
        #kill process
        #keep killing from the list]

    print("Total memory freed: ", freed_mem)
    print("Total processes killed: ", total_proc)

def memory_aware_kill(mem_dict, mem):

    #kill process with uss>=mem => this will kill only one process
    flag = 0
    freed_mem = 0
    total_proc = 0
    i = 0
    while i < len(mem_dict):
        if(mem_dict[i][1]>= mem):
            flag = 1
            freed_mem +=mem_dict[i][1]
            total_proc +=1
            print("Killing ", mem_dict[i][0])
            break

        i += 1
            #os.kill(int(pid), signal.SIGKILL)

    #print("pid and uss are: ", pid, uss)
    #kill the least number of processes
    print('value of i', i)
    print('length', len(mem_dict))
    if(not flag):
        while mem > 0:
            # kill the process with max memory,i.e the last from the list
            mem = mem - mem_dict[i - 1][1]
            freed_mem += mem_dict[i - 1][1]
            total_proc += 1
            print("Killing ", mem_dict[i-1][0])
            mem_dict.pop(i - 1)
            #print(mem_dict)
             
            i = 0

            while i < len(mem_dict):
                if (mem_dict[i][1] >= mem):
                    print('length', len(mem_dict))
                    flag = 1
                    mem = mem - mem_dict[i][1]
                    freed_mem += mem_dict[i][1]
                    total_proc += 1
                    print("Killing ", mem_dict[i][0])
                    mem_dict.pop(i)
                    break
                i+=1

         
    print("Total memory freed: ", freed_mem)
    print("Total processes killed: ", total_proc)



if __name__ == '__main__':
